<h3>Update User</h3>
{{#if editUser}}
<div>
  <form>
    <div class="form-group">
      <label for="username">Username: </label>
      {{input value=model.username id="username" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="password">Password: </label>
      {{input value=model.password id="password" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="email">Email: </label>
      {{input value=model.email id="email" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="firstname">First Name: </label>
      {{input value=model.firstname id="firstname" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="lastname">Last Name: </label>
      {{input value=model.lastname id="lastname" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=model.image id="image" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="goal">Daily Calorie Goal: </label>
      {{input value=model.goal id="goal" class="form-control"}}
    </div>

    <button {{action 'saveUser'}}>Save User</button>
  </form>
</div>
{{else}}
  <button {{action 'userFormShow'}}>Edit User</button>
{{/if}}
