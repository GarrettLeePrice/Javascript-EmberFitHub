<h2>Add Activity</h2>
{{#if addNewActivity}}
<div>
<form>
  <div class="form-group">
    <label for="description">Description: </label>
    {{input value=description id="description" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="amount">Goal Amount: </label>
    {{input value=amount id="amount" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="units">Units: </label>
    {{input value=units id="units" class="form-control"}}
  </div>

  <button {{action 'saveActivity'}}>Save</button>
</form>
</div>
{{else}}
  <button {{action 'activityFormShow'}}>Add Activity</button>
{{/if}}
