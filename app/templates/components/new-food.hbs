<form>
  <div class="form-group">
    <label for="food">Food: </label>
    {{input value=new-food id="new-food" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="calories">Calories: </label>
    {{input value=new-calories id="new-calories" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="protein">Protein: </label>
    {{input value=new-protein id="new-protein" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="carbs">Carbs: </label>
    {{input value=new-carbs id="new-carbs" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="fat">Fat: </label>
    {{input value=new-fat id="new-fat" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="category">Category: </label>
    {{input value=new-category id="new-category" class="form-control"}}
  </div>

  <button {{action 'addNewFood'}}>Add New Food</button>
</form>
