<h2>Add Meal</h2>
{{#if addNewMeal}}
<div>
<form>
  <div class="form-group">
    <label for="description">Description: </label>
    {{input value=description id="description" class="form-control"}}
  </div>

  <div class="form-group" id="food-display">
    <label for="mealtime">Mealtime: </label>

    {{pikaday-input value=mealtime format="MMMM Do YYYY, hh:mm" class="form-control" id="time-input"}}

  </div>

  <div class="form-group">
    <label for="foods">Add Foods: </label>
    {{input value=foods id="foods" class="form-control"}}
  </div>

  <button {{action 'saveMeal'}}>Save Meal</button>
</form>
</div>
{{else}}
  <button {{action 'mealFormShow'}}>Add Meal</button>
{{/if}}
