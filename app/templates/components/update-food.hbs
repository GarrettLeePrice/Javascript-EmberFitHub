{{#if showUpdateFood}}
<form>
  <div class="form-group">
    <label for="foodname">Food: </label>
    {{input value=foodname placeholder=food.foodname id="foodname" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="calories">Calories: </label>
    {{input value=calories placeholder=food.calories id="calories" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="protein">Protein: </label>
    {{input value=protein placeholder=food.protein id="protein" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="carbs">Carbs: </label>
    {{input value=carbs placeholder=food.carbs id="carbs" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="fat">Fat: </label>
    {{input value=fat placeholder=food.fat id="fat" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="category">Category: </label>
    {{input value=category placeholder=food.category id="category" class="form-control"}}
  </div>

  <button {{action 'updateFood' food}}>Save Food</button>
  <button {{action 'deleteFood' food}}>Delete Food</button>
</form>

{{else}}
  <button {{action 'showUpdateFood'}}>Edit Food</button>
{{/if}}
