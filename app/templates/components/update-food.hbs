{{#if showUpdateFood}}
<form>
  <div class="form-group">
    <label for="food">Food: </label>
    {{input value=food.food id="edit-food" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="calories">Calories: </label>
    {{input value=food.calories id="edit-calories" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="protein">Protein: </label>
    {{input value=food.protein id="edit-protein" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="carbs">Carbs: </label>
    {{input value=food.carbs id="edit-carbs" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="fat">Fat: </label>
    {{input value=food.fat id="edit-fat" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="category">Category: </label>
    {{input value=food.category id="edit-category" class="form-control"}}
  </div>

  <button {{action 'updateFood'}}>Save Food</button>
</form>

{{else}}
  <button {{action 'showUpdateFood'}}>Edit Food</button>
{{/if}}
